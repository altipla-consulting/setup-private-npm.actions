{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2019",
    "module": "es2020",
    "strict": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
